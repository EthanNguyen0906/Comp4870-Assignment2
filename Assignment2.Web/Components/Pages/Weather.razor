@page "/weather"
@using System.Net.Http.Json
@using Assignment2Library.Data.Models

@inject HttpClient Http
@inject NavigationManager NavManager

<PageTitle>Articles</PageTitle>

<h1>Articles</h1>

@if (articles == null)
{
    <p><em>Loading articles...</em></p>
}
else if (!articles.Any())
{
    <p>No articles found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>End Date</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in articles)
            {
                <tr>
                    <td>@article.Title</td>
                    <td>@article.EndDate.ToShortDateString()</td>
                    <td>@article.Body</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Article[]? articles;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // If the API is hosted at, say, https://localhost:5001
            // you might do:
            articles = await Http.GetFromJsonAsync<Article[]>("http://localhost:5144/api/Articles/articles");
        }
        catch (Exception ex)
        {
            // Handle any errors (e.g., network issues)
            Console.WriteLine($"Error fetching articles: {ex.Message}");
        }
    }
}
